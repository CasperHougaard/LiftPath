<?xml version="1.0" encoding="utf-8"?>
<!--
   Data extraction rules for Android 12+ (API 31+)
   Controls what gets backed up to cloud and transferred between devices
   See https://developer.android.com/about/versions/12/backup-restore#xml-changes
-->
<data-extraction-rules>
    <cloud-backup>
        <!-- Include all files (training_data.json is stored here) -->
        <include domain="file" path="."/>
        
        <!-- Include all SharedPreferences (user settings) -->
        <include domain="sharedpref" path="."/>
        
        <!-- Include databases if any -->
        <include domain="database" path="."/>
        
        <!-- Exclude cache directory (temporary files) -->
        <exclude domain="file" path="cache/"/>
    </cloud-backup>
    
    <device-transfer>
        <!-- Same rules for device-to-device transfer -->
        <include domain="file" path="."/>
        <include domain="sharedpref" path="."/>
        <include domain="database" path="."/>
        <exclude domain="file" path="cache/"/>
    </device-transfer>
</data-extraction-rules>