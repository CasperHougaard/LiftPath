<?xml version="1.0" encoding="utf-8"?>
<!--
   Backup rules for LiftPath app
   Ensures training data and user preferences are backed up to Google Drive
   and restored when app is reinstalled from Play Store
   
   See https://developer.android.com/guide/topics/data/autobackup
-->
<full-backup-content>
    <!-- Include all files in the app's files directory (where training_data.json is stored) -->
    <include domain="file" path="."/>
    
    <!-- Include all SharedPreferences (user settings, preferences) -->
    <include domain="sharedpref" path="."/>
    
    <!-- Include databases if any -->
    <include domain="database" path="."/>
</full-backup-content>