<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fitness_background"
    android:fitsSystemWindows="true"
    tools:context=".activities.SelectExerciseActivity">

    <!-- Background Flow Animation -->
    <ImageView
        android:id="@+id/image_bg_animation"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:alpha="1.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avd_background_flow" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:padding="24dp">

        <!-- HEADER WITH BACK BUTTON -->
        <androidx.cardview.widget.CardView
            android:id="@+id/button_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/fitness_card_background"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:contentDescription="@string/progress_back_content_description"
                android:padding="12dp"
                android:src="@drawable/ic_arrow_back_24"
                android:clickable="false"
                android:focusable="false"
                app:tint="@color/fitness_text_primary" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/header_container"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/button_back"
            app:layout_constraintTop_toTopOf="@id/button_back">

            <TextView
                android:id="@+id/text_select_exercise_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select an Exercise"
                android:textColor="@color/fitness_text_primary"
                android:textSize="28sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- SEARCH FIELD -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_search"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/fitness_card_background"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_container">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="16dp">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:src="@drawable/ic_search_24"
                    app:tint="@color/fitness_text_secondary"
                    android:layout_marginEnd="12dp" />

                <EditText
                    android:id="@+id/edit_text_search"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Search exercises..."
                    android:textColor="@color/fitness_text_primary"
                    android:textColorHint="@color/fitness_text_secondary"
                    android:textSize="16sp"
                    android:background="@android:color/transparent"
                    android:inputType="text"
                    android:imeOptions="actionSearch"
                    android:maxLines="1" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- SCROLLABLE CONTENT (Filter + Exercises) -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:fillViewport="true"
            app:layout_constraintBottom_toTopOf="@id/button_create_new_exercise"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_search">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

        <!-- FILTER CARD -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_filter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardBackgroundColor="@color/fitness_card_background"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:id="@+id/layout_filter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Filter Chips -->
                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group_filters"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:chipSpacing="8dp"
                    app:singleSelection="false">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_filter_unadded"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Unadded"
                        android:checked="true" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_filter_missing_primary"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Missing Primary" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_filter_missing_secondary"
                        style="@style/Widget.MaterialComponents.Chip.Choice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Missing Secondary" />
                </com.google.android.material.chip.ChipGroup>

                <!-- Advanced Filters Expandable Section -->
                <LinearLayout
                    android:id="@+id/layout_advanced_filters_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="12dp"
                    android:paddingBottom="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Advanced Filters"
                        android:textColor="@color/fitness_text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/image_advanced_filters_expand"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_drop_down_24"
                        app:tint="@color/fitness_text_secondary"
                        android:rotation="0" />
                </LinearLayout>

                <!-- Advanced Filters Content (Collapsed by default) -->
                <LinearLayout
                    android:id="@+id/layout_advanced_filters_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    android:paddingTop="8dp">

                    <!-- Movement Pattern Spinner -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Movement Type"
                        android:textColor="@color/fitness_text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <Spinner
                        android:id="@+id/spinner_movement_pattern"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp" />

                    <!-- Body Region Spinner -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Body Area"
                        android:textColor="@color/fitness_text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <Spinner
                        android:id="@+id/spinner_body_region"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp" />

                    <!-- Target Muscle ChipGroup -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Muscle Groups"
                        android:textColor="@color/fitness_text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chip_group_muscle_groups"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:chipSpacing="8dp"
                        app:singleSelection="false" />
                </LinearLayout>

                <!-- Muscle Overview Expandable Section -->
                <LinearLayout
                    android:id="@+id/layout_muscle_overview_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingTop="12dp"
                    android:paddingBottom="8dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Muscle Overview"
                        android:textColor="@color/fitness_text_primary"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/text_muscle_overview_badge"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:text="0/24"
                        android:textSize="14sp"
                        android:textColor="@color/fitness_text_secondary"
                        tools:text="12/24" />

                    <ImageView
                        android:id="@+id/image_muscle_overview_expand"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_drop_down_24"
                        app:tint="@color/fitness_text_secondary"
                        android:rotation="0" />
                </LinearLayout>

                <!-- Muscle Overview WebView (Collapsed by default) -->
                <FrameLayout
                    android:id="@+id/layout_muscle_overview_content"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:visibility="gone"
                    android:background="@color/fitness_background">

                    <WebView
                        android:id="@+id/webview_muscle_overview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                    <ProgressBar
                        android:id="@+id/progress_muscle_overview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:visibility="visible"
                        android:indeterminateTint="@color/fitness_primary" />

                    <TextView
                        android:id="@+id/text_muscle_overview_empty"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Add exercises to see muscle activation"
                        android:textSize="14sp"
                        android:textColor="@color/fitness_text_secondary"
                        android:visibility="gone" />
                </FrameLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- EXERCISES LIST CARD -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_exercises_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            app:cardBackgroundColor="@color/fitness_card_background"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_select_exercise"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:padding="12dp"
                android:clipToPadding="false"
                android:clipChildren="false" />
        </androidx.cardview.widget.CardView>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- CREATE NEW EXERCISE BUTTON - FIXED AT BOTTOM -->
        <androidx.cardview.widget.CardView
            android:id="@+id/button_create_new_exercise"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="24dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="@color/fitness_primary"
            app:cardCornerRadius="20dp"
            app:cardElevation="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="Create New Exercise"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
