<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/fitness_card_background"
    android:minHeight="400dp">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="false"
        android:focusable="false">

        <TextView
            android:id="@+id/text_muscle_overview_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Muscle Overview"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/fitness_text_primary" />

        <TextView
            android:id="@+id/text_muscle_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0/24"
            android:textSize="14sp"
            android:textColor="@color/fitness_text_secondary"
            android:layout_marginEnd="8dp"
            tools:text="12/24 muscles activated" />

        <ImageButton
            android:id="@+id/button_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_close_24"
            app:tint="@color/fitness_text_secondary"
            android:contentDescription="Close" />
    </LinearLayout>

    <!-- Empty State -->
    <LinearLayout
        android:id="@+id/layout_empty_state"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add exercises to see muscle activation"
            android:textSize="16sp"
            android:textColor="@color/fitness_text_secondary"
            android:gravity="center" />
    </LinearLayout>

    <!-- WebView Container -->
    <FrameLayout
        android:id="@+id/layout_webview_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:minHeight="400dp"
        android:background="@color/fitness_background">

        <WebView
            android:id="@+id/webview_muscle_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ProgressBar
            android:id="@+id/progress_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="visible"
            android:indeterminateTint="@color/fitness_primary" />
    </FrameLayout>

</LinearLayout>

