<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_exercise_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="48dp"
    android:orientation="horizontal"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <ImageView
        android:id="@+id/image_plan_badge"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_checkmark"
        android:visibility="gone"
        android:contentDescription="In plan"
        app:tint="@color/fitness_primary" />

    <TextView
        android:id="@+id/text_exercise_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_weight="1"
        android:text="Exercise Name"
        android:textColor="@color/fitness_text_primary"
        android:textSize="16sp"
        android:gravity="center_vertical" />
</LinearLayout>
