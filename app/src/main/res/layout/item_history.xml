<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground"
    app:cardBackgroundColor="@color/fitness_card_background"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Training Title & Type -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/text_training_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/fitness_text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Training #47" />

            <TextView
                android:id="@+id/text_training_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_chip"
                android:backgroundTint="@color/fitness_primary"
                android:paddingStart="10dp"
                android:paddingTop="4dp"
                android:paddingEnd="10dp"
                android:paddingBottom="4dp"
                android:textColor="@color/white"
                android:textSize="11sp"
                android:textStyle="bold"
                tools:text="HEAVY" />
        </LinearLayout>

        <!-- Date & Volume Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_history"
                app:tint="@color/fitness_text_secondary" />

            <TextView
                android:id="@+id/text_training_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:textColor="@color/fitness_text_secondary"
                android:textSize="13sp"
                tools:text="2025/11/13" />

            <View
                android:layout_width="4dp"
                android:layout_height="4dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/bg_circle_decoration"
                android:backgroundTint="@color/fitness_text_secondary" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_dumbbell"
                app:tint="@color/fitness_text_secondary" />

            <TextView
                android:id="@+id/text_training_volume"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:textColor="@color/fitness_text_secondary"
                android:textSize="13sp"
                tools:text="1,250kg" />
        </LinearLayout>

        <!-- Exercise Summary -->
        <TextView
            android:id="@+id/text_exercises_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:textColor="@color/fitness_text_secondary"
            android:textSize="12sp"
            tools:text="4 exercises â€¢ 12 sets" />

    </LinearLayout>
</androidx.cardview.widget.CardView>