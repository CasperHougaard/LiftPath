<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fitness_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:fitsSystemWindows="false">

        <!-- Header -->
        <TextView
            android:id="@+id/text_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start Workout"
            android:textColor="@color/fitness_text_primary"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_header_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="24dp"
            android:text="Choose how you want to start"
            android:textColor="@color/fitness_text_secondary"
            android:textSize="14sp" />

        <!-- Main Tiles Container -->
        <LinearLayout
            android:id="@+id/layout_main_tiles"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Custom Tile -->
            <include
                android:id="@+id/tile_custom"
                layout="@layout/item_workout_mode_tile" />

            <!-- Plan Tile -->
            <include
                android:id="@+id/tile_plan"
                layout="@layout/item_workout_mode_tile" />

            <!-- AUTO Tile -->
            <include
                android:id="@+id/tile_auto"
                layout="@layout/item_workout_mode_tile" />
        </LinearLayout>

        <!-- Plan List Container (Initially Hidden) -->
        <LinearLayout
            android:id="@+id/layout_plan_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:id="@+id/text_plan_list_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="Select a Plan"
                android:textColor="@color/fitness_text_primary"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_plans"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

            <TextView
                android:id="@+id/text_empty_plans"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_gravity="center"
                android:text="No plans available. Create one from the Plans screen."
                android:textColor="@color/fitness_text_secondary"
                android:textSize="14sp"
                android:visibility="gone" />
        </LinearLayout>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
